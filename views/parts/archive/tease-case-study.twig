<article id="post-{{post.ID}}" class="uk-section uk-section-small {{ post.class }}">
   <header>
      <h2 class="uk-margin-remove-adjacent uk-article-title uk-margin-small-bottom"><a title="{{post.title}}" class="uk-link-reset" href="{{post.link}}">{{post.title}}</a></h2>
      <p class="uk-article-meta">Case Study Item from {{ post.terms('location')|join(', ') }}.
      </p>
   </header>
   {% if post.get_thumbnail %}
   <figure>
      <img class="rmcc-border" data-src="{{ post.thumbnail.src('solaris-theme-archive-featured-image') }}" width="1115" height="300" alt="{{ post.thumbnail.alt }}" class="lazy" data-uk-img>
      <figcaption class="uk-padding-small uk-text-center uk-text-muted">{{ post.thumbnail.caption }}</figcaption>
   </figure>
   {% endif %}
   <p>{{ post.preview.read_more('') }}</p>
   <a href="{{post.link}}" title="Read More" class="uk-button uk-button-primary">Read more</a>
</article>
<!-- /the post block -->