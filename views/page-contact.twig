{% extends "base.twig" %}

{% block content %}

<!-- MAIN CONTENT -->
<main role="main" id="MainContent" class="uk-section uk-section-xsmall uk-section-muted rmcc-padding-bottom80">

  <div id="SingleProductWrap" class="uk-container uk-container-large">
    
    <div id="ProductHeader" uk-grid>

      <section id="ProductBreadsBlock" class="uk-width-1-1@s">
        <div class="rmcc-padding-top5">
          <a href="#" class="uk-text-bold">Home</a><span class="uk-margin-small-left uk-margin-small-right" uk-icon="chevron-right"></span><span>Contact us</span>
        </div>
      </section>

      <section id="ProductTitleBlock" class="uk-width-1-1 rmcc-margin-top30">
        <h1>Contact us</h1>
      </section>

    </div>
    
    <div class="rmcc-margin-top30" uk-grid>
      
      <section class="uk-width-1-1@s ">
        <div class="uk-card uk-card-default uk-padding-remove uk-card-body">
          <iframe src="{{ options.site_map }}" width="1500" height="400" frameborder="0" style="border:0" allowfullscreen uk-responsive></iframe>
        </div>
      </section>
      
      <section class="uk-width-1-2@s">
        <div class="uk-card uk-card-small uk-card-default">
            <div class="uk-card-header">
              <h3>Information</h3>
            </div>
            <div class="uk-card-body">
                <p>We appreciate you taking the time to visit our store today! If you have any questions about any of our products, please feel free to contact us.  You may use the form to the right or you can get in touch using the information below.</p>
                <p><span class="uk-text-bold uk-text-emphasis">{{ site.title }}</span></p>
                <p>
                  {{ options.company_address_line_1 }},<br>
                  {{ options.company_address_line_2 }},<br>
                  {{ options.company_address_line_3 }}
                </p>
                <p><span class="uk-text-bold uk-text-emphasis">Freephone:</span> <a href="#" class="uk-link-text">{{ options.company_number }}</a></p>
                <p><span class="uk-text-bold uk-text-emphasis">Email:</span> <a href="#" class="uk-link-text">{{ options.company_email }}</a></p>
            </div>
        </div>
      </section>
      
      <section id="ContactPageForm" class="uk-width-1-2@s">
        <div class="uk-card uk-card-small uk-card-default">
            <div class="uk-card-header">
              <h3>Contact us</h3>
            </div>
            <div class="uk-card-body">
              
              <form id="ContactPageForm" class="uk-grid-small" uk-grid>
                  <div class="uk-width-1-2@s">
                    <label class="uk-form-label uk-text-bold" for="form-s-text">Name<span class="rmcc-required">*</span></label>
                    <input class="uk-input uk-box-shadow-small" id="form-s-text" type="text" placeholder="Your Name..." required>
                  </div>
                  <div class="uk-width-1-2@s">
                    <label class="uk-form-label uk-text-bold" for="form-s-text">Email<span class="rmcc-required">*</span></label>
                    <input class="uk-input uk-box-shadow-small" id="form-s-email" type="email" placeholder="Your email address..." required>
                  </div>
                  <div class="uk-width-1-1">
                    <label class="uk-form-label uk-text-bold" for="form-s-text">Phone<span class="rmcc-required">*</span></label>
                    <input class="uk-input uk-box-shadow-small" id="form-s-tel" type="tel" placeholder="Your phone number..." required>
                  </div>
                  <div class="uk-width-1-1">
                    <label class="uk-form-label uk-text-bold" for="form-s-text">Your Message<span class="rmcc-required">*</span></label>
                    <textarea class="uk-textarea uk-box-shadow-small" id="form-s-textarea" rows="8" placeholder="Your Message or Enquiry..." required></textarea>
                  </div>
                  <div class="uk-width-1-1">
                    <button class="uk-button uk-button-primary">Submit</button>
                    <button class="uk-button uk-button-default" type="reset" value="Reset">Clear</button>
                    <button class="uk-button uk-button-danger uk-float-right uk-visible@s">Required</button>
                  </div>
              </form>

            </div>
        </div>
      </section>

    </div>

  </div>
  
</main>
<!-- /MAIN CONTENT -->

{% endblock %}