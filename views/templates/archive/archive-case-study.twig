{% extends "base.twig" %}

{% block content %}

<!-- HERO -->
<div class="uk-section uk-section-small uk-background-center-center uk-position-relative uk-background-cover uk-light uk-background-fixed purple-wrap-blur" style="background-image: url(/wp-content/themes/solaris-theme/assets/img/blinds-chairs.jpg);">
  <div class="uk-position-z-index uk-position-relative uk-container uk-text-center">
    <h1 class="uk-h1 uk-text-uppercase">Case Study Gallery</h1>
    <hr class="uk-divider-small"></hr>
    <p class="uk-text-lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. You can also take a look through our range of blind videos on YouTube â€“ <a href="#">click here to visit our YouTube Channel.</a></p>
  </div>
</div>
<!-- /HERO -->

<script type="text/javascript">
jQuery(document).ready(function() {
  jQuery('#lightGallery').lightGallery();
  thumbnail:true;
  subHtmlSelectorRelative: true;
  hash: true;
});
</script>

<style>
.lg-sub-html h3 {
    margin-bottom: 10px;
}
.lg-sub-html p {
    font-size: 16px;
}
</style>

<main role="main" id="MainContent" class="uk-section uk-section-small uk-section-muted">
  <div class="uk-container uk-container-large" uk-filter="target: .js-filter">
    <div uk-navbar>
      <div class="uk-navbar-right">
        <ul class="uk-navbar-nav">
          <li>
            <a href="#" class="uk-margin-small-bottom" style="min-height:40px;">Sorting: <span uk-icon="icon:  triangle-down"></span></a>
            <div uk-dropdown="mode: click;">
              <ul class="uk-nav uk-dropdown-nav">
                <li class="uk-active" uk-filter-control="sort: data-name"><a href="#">Title: Ascending</a></li>
                <li uk-filter-control="sort: data-name; order: desc"><a href="#">Title: Descending</a></li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </div>
    
    <div id="lightGallery" class="uk-grid uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-4@m uk-grid-match js-filter" data-uk-lightbox="toggle:a.uk-position-cover" data-uk-grid="masonry: true">
      
    {% for post in posts %}
      <!-- item -->
      <div data-src="{{ post.thumbnail.src }}" data-name="{{ post.slug }}" data-sub-html=".caption-{{ post.slug }}">
        <div class="uk-card uk-card-default uk-card-small">
          <div class="uk-card-media-top">
            <div class="uk-inline-clip uk-transition-toggle uk-light">
              <a>
              <img class="rmcc-object-fit" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
              <div class="uk-transition-fade uk-position-cover uk-overlay uk-overlay-primary uk-flex uk-flex-center uk-flex-middle">
                <div data-uk-margin class="uk-transition-slide-bottom-small">
                  <span data-uk-icon="icon: search; ratio: 1.3"></span>
                </div>
              </div>
              </a>
            </div>
            <div class="caption-{{ post.slug }}" hidden>
              <h3 class="uk-light rmcc-white-text">{{ post.title }}</h3>
              <p class="uk-text-large">{{ post.content }}</p>
              <p class="uk-margin-top"><a class="uk-button uk-button-primary" href="{{ post.link }}">View the Case Study</a></p>
            </div>

          </div>
          <div class="uk-card-body">
            <h3 class="uk-card-title">{{ post.title }}</h3>
            <p class="uk-text-meta uk-margin-remove-top">{{ post.terms('location')|join(', ') }}</p>
            <p>{{ post.content|truncate(16) }}</p>
          </div>
        </div>
      </div>
      <!-- item -->
    {% endfor %}

    {% if posts is empty %}
      <p class="uk-text-emphasis">No posts found. Please publish some content via Posts > Add New</p>
    {% endif %}
      
    </div>
    
    {% if posts > 8 %}
      {% include 'pagination.twig' %}
    {% endif %}
    
  </div>
</main>

{% endblock %}