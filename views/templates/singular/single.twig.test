{% extends "base.twig" %}

{% block content %}

<!-- setting the page wrapping within main element  -->
<div class="article-content">
  
  <section class="uk-section uk-section-muted uk-section-small uk-article">
    
  <div class="uk-container uk-margin-medium-bottom">
    <img data-src="{{ post.thumbnail.src('solaris-theme-header-image') }}" width="1920" height="400" alt="" uk-img>
  </div>

  <!-- main article content wrapping with wp post classes & id -->
  <article id="post-{{post.ID}}" class="uk-article {{post.class}}">

    <!-- title and meta wrapping -->
    <div class="uk-container uk-container-small">
      <h1 class="uk-heading-medium uk-margin-remove-adjacent uk-margin-remove-top">{{ post.title }}</h1>
      <p class="uk-article-meta">Written on {{post.date | date}}. Posted in <a href="{{ post.category.link }}">{{ post.category }}</a></p>
    </div>
    <!-- /title and meta wrapping -->

    <!-- main article content, this section is outputted according to the format of the html in the text editor -->
    <div class="uk-section uk-section-xsmall">
      {{ post.content }}
    </div>
    <!-- /main article content -->

  </article>
  <!-- /main article content wrapping -->

  {% if post.comments %}
  
  <!-- comment box -->
  <section class="comment-box uk-container uk-section uk-section-small">
    
    <ul class="uk-comment-list">
    {% if post.comments %}
      {% for comment in post.comments %}
        {% include "comment.twig" %}
      {% endfor %}
    {% endif %}
    </ul>

  {% if post.comment_status == "closed" %}
  
    <p> comments for this post are closed </p>
  
  {% else %}
  
    <!-- comment form -->
    <div class="uk-section uk-section-default uk-margin-large-top uk-padding rmcc-border">
      
      <h4 class="uk-heading-line"><span>Post a new Comment</span></h4>
    
      {% include "comment-form.twig" %}
    
    </div>
  
  {% endif %}

  </section>

  {% endif %}

  </section>
  
</div>
<!-- /setting the page wrapping within main element -->

{% include "more-stories.twig" %}

{% include "bottom-bar.twig" %}

{% endblock %}
