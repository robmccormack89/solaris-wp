<section class="uk-width-1-2@s">
  <div class="uk-card uk-card-small uk-card-default">
    <div class="uk-card-header">
      <h3>Contact Information</h3>
    </div>
    <div class="uk-card-body">
      {{ post.content }}
      <p><span class="uk-text-bold uk-text-emphasis">{{ site.title }}</span></p>
      <ul class="uk-list">
        {% for item in options.company_address %}
        <li>{{ item.address_line }}</li>
        {% endfor %}
      </ul>
      <p><span class="uk-text-bold uk-text-emphasis">Freephone:</span> <a href="tel:{{ options.company_number }}" title="Freephone us on {{ options.company_number }}" class="uk-link-text">{{ options.company_number }}</a></p>
      <p><span class="uk-text-bold uk-text-emphasis">Local:</span> <a href="tel:{{ options.company_number_2 }}" title="Call us on {{ options.company_number_2 }}" class="uk-link-text">{{ options.company_number_2 }}</a></p>
      <p><span class="uk-text-bold uk-text-emphasis">Email:</span> <a href="mailto:{{ options.company_email }}" title="Email us on {{ options.company_email }}" class="uk-link-text">{{ options.company_email }}</a></p>
    </div>
  </div>
</section>